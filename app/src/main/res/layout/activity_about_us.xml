<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/fl16"
        android:layout_centerHorizontal="true"
        android:id="@+id/home_logo"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First LogIn"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version: 1.0.1"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center_horizontal" />

        <TextView
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Application with User Friendly Interface to save all your important Passwords so you never forget them again."
            android:layout_centerHorizontal="true"
            android:textSize="20dp"

            android:layout_gravity="center_horizontal" />

        <TextView
            android:paddingTop="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like us on: www.facebook.com/firstl0gin"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:paddingLeft="10dp"/>

        <TextView
            android:paddingTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Any suggestion for the improvement of the Application are most Welcome."
            android:layout_centerHorizontal="true"
            android:textSize="15dp"

            android:layout_gravity="center_horizontal" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
