<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jerry.managepasswords.ChangePassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter old Password or Alternate Password"
        android:id="@+id/textView11" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/old_password" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter New Password"
        android:layout_below="@+id/old_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="68dp"
        android:id="@+id/textView12" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="New Password"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:id="@+id/new_password" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Re-enter Password"
        android:layout_below="@+id/new_password"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView13" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:hint="Re-enter Password"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:id="@+id/cnf_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Change Password"
        android:id="@+id/button2"
        android:layout_below="@+id/cnf_password"
        android:layout_centerHorizontal="true"
        android:onClick="change_password"
        android:background="@drawable/buttonshape2"
        android:textColor="#FFFFFF"
        />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
